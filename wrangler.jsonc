/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "twitter-x-discord-forwarder",
  "main": "src/index.ts",
  "compatibility_date": "2025-09-06",
  "observability": {
    "enabled": true,
  },
  "triggers": {
    "crons": ["*/16 * * * *"], // We HAVE to do this every 16 minutes because Twitter's API has a shitty ratelimit of 1/15min on free plan
  },
  "compatibility_flags": ["nodejs_compat"],
  "kv_namespaces": [
    {
      "binding": "TWITTER_DISCORD_FORWARDER_KV",
      "id": "b75cff498d414afcb8e46ff891e0a31e",
    },
  ],
  "vars": {
    "TARGET_USERNAME": "lukez_dev",
    "TARGET_USER_ID": "1281491352631611392",
  },
}
